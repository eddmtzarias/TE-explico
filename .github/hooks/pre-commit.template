#!/bin/bash
#
# Pre-commit hook template for OmniMaestro project
# 
# Este hook:
# - Valida que no se commiteen archivos incompletos
# - Actualiza .project_state.json automÃ¡ticamente
# - Sugiere siguiente paso despuÃ©s de cada commit exitoso
#
# InstalaciÃ³n:
#   cp .github/hooks/pre-commit.template .git/hooks/pre-commit
#   chmod +x .git/hooks/pre-commit
#

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}ðŸ” Ejecutando validaciones pre-commit...${NC}"

# Verificar que estamos en el directorio raÃ­z del proyecto
if [ ! -f "PROJECT_ROADMAP.md" ]; then
    echo -e "${RED}âŒ Error: No se encuentra PROJECT_ROADMAP.md${NC}"
    echo -e "${YELLOW}AsegÃºrate de estar en el directorio raÃ­z del proyecto${NC}"
    exit 1
fi

# Verificar que el script de guÃ­a existe
if [ ! -f "scripts/project_guide.py" ]; then
    echo -e "${YELLOW}âš ï¸  Advertencia: No se encuentra scripts/project_guide.py${NC}"
    echo -e "${YELLOW}El sistema de guÃ­a no estÃ¡ disponible${NC}"
    # No fallar, solo advertir
fi

# Ejecutar linters si existen
if [ -f "package.json" ]; then
    echo -e "${BLUE}ðŸ“ Ejecutando linter de JavaScript/TypeScript...${NC}"
    if npm run lint:check &>/dev/null; then
        echo -e "${GREEN}âœ… Linter pasÃ³${NC}"
    else
        echo -e "${YELLOW}âš ï¸  Advertencia: Linter fallÃ³ (no bloqueante)${NC}"
    fi
fi

if command -v python3 &> /dev/null; then
    # Verificar archivos Python modificados
    PYTHON_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$')
    
    if [ ! -z "$PYTHON_FILES" ]; then
        echo -e "${BLUE}ðŸ Verificando archivos Python...${NC}"
        
        # Verificar sintaxis Python
        for file in $PYTHON_FILES; do
            python3 -m py_compile "$file" 2>/dev/null
            if [ $? -ne 0 ]; then
                echo -e "${RED}âŒ Error de sintaxis en: $file${NC}"
                exit 1
            fi
        done
        echo -e "${GREEN}âœ… Sintaxis Python correcta${NC}"
    fi
fi

# Verificar que no se commitee .env
if git diff --cached --name-only | grep -q "^\.env$"; then
    echo -e "${RED}âŒ Error: Intentando commitear .env${NC}"
    echo -e "${YELLOW}El archivo .env contiene informaciÃ³n sensible y no debe commitearse${NC}"
    echo -e "${YELLOW}Usa: git reset HEAD .env${NC}"
    exit 1
fi

# Verificar que archivos crÃ­ticos no se eliminen accidentalmente
CRITICAL_FILES=("PROJECT_ROADMAP.md" "PROJECT_DASHBOARD.md" ".project_state.json" "README.md")
for file in "${CRITICAL_FILES[@]}"; do
    if git diff --cached --name-only --diff-filter=D | grep -q "^$file$"; then
        echo -e "${RED}âŒ Error: Intentando eliminar archivo crÃ­tico: $file${NC}"
        echo -e "${YELLOW}Si realmente necesitas eliminarlo, usa --no-verify${NC}"
        exit 1
    fi
done

# Verificar tamaÃ±o de archivos (evitar commits grandes accidentales)
MAX_SIZE=$((10 * 1024 * 1024)) # 10MB
LARGE_FILES=$(git diff --cached --name-only | while read file; do
    if [ -f "$file" ]; then
        size=$(stat -f%z "$file" 2>/dev/null || stat -c%s "$file" 2>/dev/null)
        if [ $size -gt $MAX_SIZE ]; then
            echo "$file ($(($size / 1024 / 1024))MB)"
        fi
    fi
done)

if [ ! -z "$LARGE_FILES" ]; then
    echo -e "${YELLOW}âš ï¸  Advertencia: Archivos grandes detectados:${NC}"
    echo "$LARGE_FILES"
    echo -e "${YELLOW}Â¿EstÃ¡s seguro de que deben commitearse?${NC}"
    echo -e "${YELLOW}Presiona Ctrl+C para cancelar, o Enter para continuar...${NC}"
    read -r
fi

# Actualizar .project_state.json si cambiÃ³ PROJECT_ROADMAP.md
if git diff --cached --name-only | grep -q "PROJECT_ROADMAP.md"; then
    echo -e "${BLUE}ðŸ“Š Actualizando estado del proyecto...${NC}"
    # AquÃ­ podrÃ­as aÃ±adir lÃ³gica para auto-actualizar el estado
    # Por ahora solo notificamos
    echo -e "${GREEN}âœ… Recuerda actualizar .project_state.json si es necesario${NC}"
fi

# Si todo pasÃ³, mostrar resumen
echo -e "${GREEN}âœ… Todas las validaciones pasaron${NC}"

# Sugerir siguiente paso (solo si el script de guÃ­a existe)
if [ -f "scripts/project_guide.py" ]; then
    echo -e "\n${BLUE}ðŸ’¡ PrÃ³ximo paso recomendado:${NC}"
    python3 scripts/project_guide.py next 2>/dev/null | head -5 || echo "Ejecuta: python3 scripts/project_guide.py next"
fi

echo ""
exit 0
